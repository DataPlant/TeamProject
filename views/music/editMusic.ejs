    <link href="https://fonts.googleapis.com/css2?family=Epilogue:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <title>Document</title>
</head>
<body>
    <%- include('../partials/navbar.ejs') %>
    <div id='header'>
        <h1>Edit:</h1>
        <h1 id='musicTitle'>"<%= foundMusic.title %>"</h1>
    </div>
    <div id='body'>
        <br>
        <form method='POST' action='/music/<%= foundMusic._id %>?_method=PUT'>
            <label for='title'>Entry Identifier:</label>
            <br>
            <input type='text' name='title' class='form-control' value='<%= foundMusic.title %>'>
            <br>
            <label for="artist">New Artist:</label>
            <br>
            <input type="text" name="artist" class='form-control' value='<%= foundMusic.artist %>'>
            <br>
            <label for="genre">New Genre:</label>
            <br>
            <select name='genre' class='form-control' id='select'>
                    <option value='<%=foundMusic.genre%>' selected>Select</option>
                <% for (i=0; i<allGenre.length; i++){ %>
                    <option value='<%= allGenre[i]._id%>'>
                        <%= allGenre[i].genre %>
                    </option>
                <% } %>
            </select>
            <br>
            <label for="link">New Song link:</label>
            <br>
            <input type="text" name="link" class='form-control' value='<%= foundMusic.link %>'>
            <br>
            <label for="musiccover" id='musiccover'>New Album Cover:</label>
            <br>
            <input type="text" name="musiccover" class='form-control' value='<%= foundMusic.musiccover %>'>
            <br>
            <a href='/music' id='back'> <button type='button' class='btn btn-default'>Go Back </a> 
                <button type='submit' class='btn btn-success' class='img-circle'>Submit </button>
        </form>
    </div>
</body>
