<body>
    <%- include('../partials/navbar.ejs') %>
    <div id='header'>
        <h1>Edit:</h1>
        <h1 id='movieTitle'>"<%= foundMovie.title %>"</h1>
    </div>
    <div id='body'>
        <br>
        <form method='POST' action='/movie/<%= foundMovie._id %>?_method=PUT'>
            <label for='title'> New Title of Movie:</label>
            <br>
            <input type='text' name='title' class='form-control' value='<%= foundMovie.title %>'>
            <br>
            <label for="rating" > New Rating:</label>
            <br>
            <input type="text" name="rating" class='form-control' value='<%= foundMovie.rating %>'>
            <br>
            <label for="genre">Genre:</label>
            <br>
            <select name='genre' class='form-control'id='select'>
                    <option value='<%=foundMovie.genre%>' selected>Select</option>
                <% for (i=0; i<allGenre.length; i++){ %>
                    <option value='<%= allGenre[i]._id%>'>
                        <%= allGenre[i].genre %>
                    </option>
                <% } %>
            </select>
            <br>
            <label for="summary"> New Movie Summary:</label>
            <br>
            <input type="text" name="summary" class='form-control' value='<%= foundMovie.summary %>'>
            <br>
            <label for="moviecover" id='moviecover'> New Movie Cover:</label>
            <br>
            <input type="text" name="moviecover" class='form-control'>
            <br>
            <a href='/movie' id='back'> <button type='button' class='btn btn-default'>Go Back </a> 
                <button type='submit' class='btn btn-success' class='img-circle'>Submit </button>
</body>
